<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgEvent"
        android:layout_width="367dp"
        android:layout_height="100dp"
        tools:srcCompat="@drawable/party2"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        />

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="62dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="50dp"
        android:layout_below="@+id/imgEvent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtNameProfile"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgProfile"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imgEvent"
        android:layout_marginLeft="10dp"
        android:text="Profile"
        style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        />


    <TextView
        android:id="@+id/txtNameEvent"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgEvent"
        android:layout_marginLeft="246dp"
        android:layout_marginTop="0dp"
        style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        android:text="Fantastic Event"
        android:inputType="text"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/txtDistanceEvent"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNameEvent"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="0dp"
        android:inputType="text"
        android:text="1.6 km" />

</RelativeLayout>