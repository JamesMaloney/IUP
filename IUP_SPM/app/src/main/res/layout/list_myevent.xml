<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgmyEvent"
        android:layout_width="367dp"
        android:layout_height="123dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/party2" />

    <TextView
        android:id="@+id/txtMyEvent"
        style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgmyEvent"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:maxLines="1"
        android:text="@string/fantastic_event"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/txtuseless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgmyEvent"
        android:layout_marginLeft="-55dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/txtMyEvent"
        android:text="@string/partecipants" />

    <TextView
        android:id="@+id/txtMyParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtuseless"
        android:layout_below="@+id/imgmyEvent"
        android:layout_marginTop="7dp"
        android:text="@string/_2" />

    <TextView
        android:id="@+id/txtSlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtMyParticipants"
        android:layout_below="@+id/imgmyEvent"
        android:layout_marginTop="7dp"
        android:gravity="left"
        android:text="@string/slash"
        android:layout_toEndOf="@+id/txtMyParticipants" />

    <TextView
        android:id="@+id/txtMyMaxPartecipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtSlash"
        android:layout_below="@+id/imgmyEvent"
        android:layout_marginTop="7dp"
        android:text="@string/_10"
        android:layout_toEndOf="@+id/txtSlash" />

</RelativeLayout>